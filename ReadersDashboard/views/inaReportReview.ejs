            font-weight: 600;
            color: #1e293b;
            font-size: 14px;
        }

        .document-controls {
            display: flex;
            gap: 8px;
        }

        .btn-icon {
            width: 32px;
            height: 32px;
            border: 1px solid #e2e8f0;
            background: white;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.2s ease;
            font-size: 14px;
        }

        .btn-icon:hover {
            background: #f1f5f9;
            border-color: #cbd5e1;
        }

        .document-viewer {
