            color: #64748b;
        }

        .document-placeholder-icon {
            font-size: 64px;
            margin-bottom: 15px;
            opacity: 0.5;
        }

        /* Editor Container */
        .editor-container {
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            overflow: hidden;
            margin-bottom: 20px;
            background: white;
        }

        .editor-toolbar {
            background: #f8fafc;
            padding: 12px 20px;
            border-bottom: 2px solid #e2e8f0;
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .toolbar-btn {
            padding: 6px 12px;
            background: white;
            border: 1px solid #e2e8f0;
            border-radius: 6px;
            font-size: 13px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .toolbar-btn:hover {
            background: #667eea;
            color: white;
            border-color: #667eea;
        }

        .editor-content {
            padding: 25px;
            min-height: 400px;
            max-height: 500px;
            overflow-y: auto;
            font-size: 14px;
            line-height: 1.8;
            color: #1e293b;
        }

        .editor-content[contenteditable="true"] {
            outline: none;
            border: 2px solid transparent;
            transition: border-color 0.2s ease;
        }

        .editor-content[contenteditable="true"]:focus {
            border-color: #667eea;
            background: #f8faff;
        }

        /* Redacted text styling */
        .redacted {
            background: #1e293b;
            color: transparent;
            user-select: none;
            padding: 2px 8px;
            border-radius: 3px;
            display: inline-block;
        }

        /* Edit highlight */
        .edit-highlight {
            background: #fef3c7;
            border-left: 3px solid #f59e0b;
            padding-left: 8px;
        }

        /* Save notification */
        .save-notification {
            background: #dcfce7;
            border: 2px solid #10b981;
            border-radius: 8px;
            padding: 15px 20px;
            margin-bottom: 20px;
            display: none;
            align-items: center;
            gap: 10px;
        }

        .save-notification.show {
            display: flex;
            animation: slideDown 0.3s ease;
        }

        @keyframes slideDown {
            from {
                transform: translateY(-20px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        /* Changes Summary */
        .changes-summary {
            background: #f8fafc;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 20px;
        }

