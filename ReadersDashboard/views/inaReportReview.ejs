            if (type === 'correction') {
                document.execCommand('insertHTML', false, '<span class="edit-highlight">[Correction: Your text here]</span> ');
            } else if (type === 'note') {
                document.execCommand('insertHTML', false, '<span class="edit-highlight">[Note: Your note here]</span> ');
            }
            
            hasChanges = true;
        }

