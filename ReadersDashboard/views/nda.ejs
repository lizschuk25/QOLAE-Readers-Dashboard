                            <div class="pdf-controls">
                                <button class="btn-icon" title="Zoom Out">üîç‚àí</button>
                                <button class="btn-icon" title="Zoom In">üîç+</button>
                                <button class="btn-icon" title="Download">üíæ</button>
                            </div>
                        </div>
