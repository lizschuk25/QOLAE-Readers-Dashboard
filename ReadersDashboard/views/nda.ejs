    <div class="modal-overlay">
        <div class="modal-container">
            <!-- Header -->
            <div class="modal-header">
                <div class="modal-header-content">
                    <div class="modal-icon">üìã</div>
                    <div>
                        <div class="modal-title">Non-Disclosure Agreement</div>
