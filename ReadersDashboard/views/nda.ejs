                    </div>
                </div>
                <button class="modal-close" onclick="closeModal()">√ó</button>
            </div>

            <!-- Progress -->
            <div class="modal-progress">
                <div class="modal-step">
                    <div class="modal-step-circle active" id="circle1">1</div>
                    <div class="modal-step-label active" id="label1">Review</div>
                </div>
                <div class="modal-progress-line">
                    <div class="modal-progress-fill" id="fill1"></div>
                </div>
                <div class="modal-step">
                    <div class="modal-step-circle" id="circle2">2</div>
                    <div class="modal-step-label" id="label2">Sign</div>
                </div>
                <div class="modal-progress-line">
                    <div class="modal-progress-fill" id="fill2"></div>
                </div>
