                    <div class="modal-step-circle" id="circle4">4</div>
                    <div class="modal-step-label" id="label4">Complete</div>
                </div>
            </div>

            <!-- Body -->
            <div class="modal-body">
                <!-- Step 1: Review -->
                <div class="modal-step-content active" id="step1">
                    <div class="step-header">
                        <h3>üìÑ Review Non-Disclosure Agreement</h3>
                        <p>Please carefully review the NDA document before proceeding to signature</p>
                    </div>

                    <div class="pdf-viewer-container">
                        <div class="pdf-viewer-header">
