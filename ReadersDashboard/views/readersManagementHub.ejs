        .upload-header {
            margin-bottom: 20px;
        }

        .upload-header h3 {
            font-size: 18px;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 5px;
        }

        .upload-subtext {
            color: #64748b;
            font-size: 13px;
        }

        .doc-type-selector {
            margin-bottom: 20px;
        }

        .doc-type-selector label {
            display: block;
            color: #1e293b;
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 8px;
