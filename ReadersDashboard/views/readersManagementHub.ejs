            border: 2px solid #e2e8f0;
            border-radius: 8px;
            font-size: 14px;
            color: #1e293b;
            background: white;
            cursor: pointer;
            transition: all 0.2s ease;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }

        .category-dropdown:hover {
            border-color: #cbd5e1;
        }

        .category-dropdown:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .upload-area {
            border: 2px dashed #cbd5e1;
            border-radius: 12px;
            padding: 40px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            background: white;
        }

        .upload-area:hover {
            border-color: #667eea;
            background: #f0f4ff;
        }

        .upload-area.dragging {
            border-color: #667eea;
            background: #f0f4ff;
            transform: scale(1.02);
        }

        .upload-icon {
            font-size: 48px;
            display: block;
            margin-bottom: 15px;
        }

        .upload-text {
            display: block;
            color: #1e293b;
            font-weight: 600;
            font-size: 16px;
            margin-bottom: 8px;
        }

        .upload-hint {
            display: block;
            color: #94a3b8;
            font-size: 13px;
        }

        .upload-success {
            margin-top: 15px;
            padding: 15px;
            background: #dcfce7;
            border: 2px solid #10b981;
            border-radius: 8px;
            color: #166534;
            font-weight: 600;
            display: none;
            animation: slideDown 0.3s ease;
        }

        .upload-success.show {
            display: block;
        }

        /* ===== DOCUMENT CATEGORIES ===== */
        .doc-categories {
            display: flex;
            flex-direction: column;
            gap: 25px;
        }

        .doc-category {
            background: white;
            border-radius: 12px;
            padding: 20px;
            border: 2px solid #e2e8f0;
        }

        .category-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            padding-bottom: 15px;
            border-bottom: 2px solid #e2e8f0;
        }

        .category-title {
            font-weight: 700;
            color: #1e293b;
            font-size: 16px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .category-count {
            padding: 4px 10px;
            background: #f1f5f9;
            color: #64748b;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 600;
        }

        .doc-list {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .doc-item {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 15px;
            background: #f8fafc;
            border-radius: 8px;
            border: 1px solid #e2e8f0;
            transition: all 0.2s ease;
        }

        .doc-item:hover {
            border-color: #cbd5e1;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            transform: translateX(3px);
        }

        .doc-icon {
            font-size: 24px;
            width: 45px;
            height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: white;
            border-radius: 8px;
            flex-shrink: 0;
        }

        .doc-info {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

        .doc-info strong {
            color: #1e293b;
            font-size: 14px;
        }

        .doc-date {
            color: #64748b;
            font-size: 12px;
        }

        .doc-actions {
            display: flex;
            gap: 8px;
        }

        .btn-mini {
            padding: 6px 14px;
            border: none;
            border-radius: 6px;
            font-size: 12px;
            font-weight: 600;
            cursor: pointer;
            background: #667eea;
            color: white;
            transition: all 0.2s ease;
        }

        .btn-mini:hover:not(:disabled) {
            background: #5568d3;
            transform: translateY(-1px);
        }

        .btn-mini:disabled {
            background: #e2e8f0;
            color: #94a3b8;
            cursor: not-allowed;
        }

        .btn-mini-delete {
            padding: 6px 10px;
            border: none;
            border-radius: 6px;
            font-size: 12px;
            cursor: pointer;
            background: #fee2e2;
            color: #991b1b;
            transition: all 0.2s ease;
        }

        .btn-mini-delete:hover {
            background: #fecaca;
            transform: translateY(-1px);
        }

        .btn-mini-info {
            padding: 6px 14px;
            border: none;
            border-radius: 6px;
            font-size: 12px;
            font-weight: 600;
            background: #dcfce7;
            color: #166534;
            cursor: default;
        }

