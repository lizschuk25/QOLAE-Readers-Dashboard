        .modal-header-content {
            display: flex;
            gap: 15px;
            align-items: flex-start;
        }

        .modal-icon {
            font-size: 48px;
            width: 70px;
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 16px;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        }

        .modal-title {
            font-size: 28px;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 5px;
        }

        .modal-subtitle {
            color: #64748b;
            font-size: 14px;
        }

        .modal-close {
            font-size: 36px;
            color: #94a3b8;
            background: none;
            border: none;
            cursor: pointer;
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
            transition: all 0.2s ease;
