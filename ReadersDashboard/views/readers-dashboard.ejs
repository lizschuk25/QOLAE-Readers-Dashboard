    <script>
        // Reader type management
        let currentReaderType = 'admin';

        function switchToAdmin() {
            currentReaderType = 'admin';
            updateReaderDisplay();
            updateActiveOption('adminOption');
        }

        function switchToMedical() {
            currentReaderType = 'medical';
            updateReaderDisplay();
            updateActiveOption('medicalOption');
        }

        function updateActiveOption(activeId) {
            document.querySelectorAll('.reader-option').forEach(option => {
                option.classList.remove('active');
            });
            document.getElementById(activeId).classList.add('active');
        }

        function updateReaderDisplay() {
            const readerType = document.getElementById('readerType');
            const welcomeName = document.getElementById('welcomeName');
            const welcomeDesc = document.getElementById('welcomeDesc');
            const reviewId = document.getElementById('reviewId');
            
            if (currentReaderType === 'medical') {
                readerType.textContent = 'Medical Professional';
                welcomeName.textContent = 'Welcome Dr. Sarah Mitchell';
                welcomeDesc.textContent = 'Access your professional medical review workspace. All clinical data is encrypted and requires NDA compliance.';
                reviewId.textContent = 'MW-003421';
            } else {
                readerType.textContent = 'Admin/Lay Reader';
                welcomeName.textContent = 'Welcome Ms. Jennifer Adams';
                welcomeDesc.textContent = 'Access your secure admin review workspace. All data is encrypted and requires NDA compliance.';
                reviewId.textContent = 'RW-002847';
            }
        }

        // Reader type selector
        const readerTypes = {
            admin: {
                category: "Admin Reader",
                type: "Admin/Lay Reader",
                description: "Non-medical professional review"
            },
            medical: {
                category: "Medical Reader", 
                type: "Medical Professional",
                description: "Professional Nurse/Doctor review"
            }
        };

        function switchReaderType() {
            currentReaderType = currentReaderType === 'admin' ? 'medical' : 'admin';
            updateReaderType();
        }

        function updateReaderType() {
            const reader = readerTypes[currentReaderType];
            document.getElementById('readerCategory').textContent = reader.category;
            document.getElementById('readerType').textContent = reader.type;
            
            // Update welcome message based on reader type
            const welcomeSection = document.querySelector('.welcome-section h2');
            if (currentReaderType === 'medical') {
                welcomeSection.textContent = 'Welcome Dr. Sarah Mitchell';
                document.querySelector('.welcome-section p').textContent = 'Access your professional medical review workspace. All data is encrypted and requires NDA compliance.';
            } else {
                welcomeSection.textContent = 'Welcome Ms. Jennifer Adams';
                document.querySelector('.welcome-section p').textContent = 'Access your secure admin review workspace. All data is encrypted and requires NDA compliance.';
            }
        }

        // Add click handler to reader category badge
        document.getElementById('readerCategory').addEventListener('click', switchReaderType);
        document.getElementById('readerCategory').style.cursor = 'pointer';
        document.getElementById('readerCategory').title = 'Click to switch between Admin and Medical reader views';

        // Simulate workflow progress
        function updateProgress(step) {
            const progressFill = document.getElementById('progressFill');
            const steps = document.querySelectorAll('.step');
            
            steps.forEach((stepEl, index) => {
                stepEl.classList.remove('active', 'completed', 'pending');
                
                if (index < step - 1) {
                    stepEl.classList.add('completed');
                } else if (index === step - 1) {
                    stepEl.classList.add('active');
                } else {
                    stepEl.classList.add('pending');
                }
            });

            progressFill.style.width = `${((step - 1) / 2) * 100}%`;
        }

        // Initialize with step 2 (Document Review)
        updateProgress(2);

        // Add interactive features
        document.addEventListener('DOMContentLoaded', function() {
            // Add click handlers for buttons
            const buttons = document.querySelectorAll('.btn:not(:disabled)');
            buttons.forEach(button => {
                button.addEventListener('click', function() {
                    // Simulate button actions
                    console.log('Button clicked:', this.textContent);
                });
            });
        });
    </script>
